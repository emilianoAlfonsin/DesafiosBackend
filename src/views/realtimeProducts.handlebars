<div>
    <!-- Formulario de agregado de productos -->
    <h1>Agregar Producto</h1>
    <form id="productForm">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required><br>
        <label for="title">Descrición:</label>
        <input type="text" id="description" name="description" required><br>
        <label for="title">Precio:</label>
        <input type="number" id="price" name="price" required><br>
        <label for="title">Imagen:</label>
        <input type="url" id="thumbnail" name="thumbnail" required><br>
        <label for="title">Stock:</label>
        <input type="number" id="stock" name="stock" required><br>
        {{!-- <label for="status">Estado:</label>
        <input type="checkbox" id="status" name="status" value="true">
        <label for="status">Activo</label><br> --}}
        
        <button type="submit">Agregar Producto</button>
    </form>

    <h2>Lista de Productos</h2>
    <ul id="productList">
        <!-- Lista de productos -->
        {{#each products}}
        <li>{{this.title}}: {{this.description}}, Precio: {{this.price}}, Stock: {{this.stock}}
            {{!-- {{#if this.status}}
                , Estado: Activo
            {{else}}
                , Estado: Inactivo
            {{/if}} --}}
        </li>
        {{/each}}
    </ul>
</div>

<script src="/socket.io/socket.io.js"></script>;

<script src="../public/js/realtimeProducts.js"></script>